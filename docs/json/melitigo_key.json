{
  "title": "Exchange Command+Tab (generally 'cycle through applications') and Control+Tab (generally 'cycle through tabs')",
  "rules": [
    {
      "description": "Change Command+Tab to Control+Tab",
      "manipulators": [
        {
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "alt"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "alt"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change Control+Tab to Command+Tab",
      "manipulators": [
        {
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "alt"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
